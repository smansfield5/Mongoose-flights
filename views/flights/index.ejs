<%- include('../partials/header') %>

     
        <table>
          <thead>
            <tr>
              <th>Airline:</th>
              <th>Airport:</th>
              <th>Flight Number:</th>
              <th>Depart Date:</th>
              <th>Arrival Date</th>
            </tr>
          </thead>
          <tbody>
            <% flights.forEach(function(f) { %>
              <tr>
                <td><%= f.airline %></td>
                <td><%= f.airport %></td>
                <td><%= f.flightNo %></td>
                <td><%= f.departs %></td>
                <td><%= f.arrival %></td>
                <td><a href="/flights/<%= f.id %>">Details</a></td>
              </tr>
            <% }); %>
            </tbody>
        </table> 

        <%- include('../partials/footer') %>